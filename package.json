{
  "name": "@doremijs/igit",
  "version": "0.0.1",
  "license": "LGPL-3.0-or-later",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@doremijs/igit-cli": "workspace:*"
  },
  "scripts": {
    "postinstall": "bun run build:core && bun run build:cli && igit install",
    "build:core": "bun run --filter @doremijs/igit-core build",
    "build:cli": "bun run --filter @doremijs/igit-cli build"
  }
}
