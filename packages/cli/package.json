{
  "name": "@doremijs/igit-cli",
  "version": "0.0.1",
  "description": "A CLI tool for combining git workflows with Rust bindings",
  "keywords": [
    "igit",
    "cli",
    "git",
    "hooks"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/erguotou520/igit.git",
    "directory": "packages/cli"
  },
  "license": "LGPL-3.0-or-later",
  "main": "bin/index.mjs",
  "scripts": {
    "build": "bun build src/index.ts --outdir bin --target node --entry-naming [dir]/[name].mjs --external @doremijs/igit-core"
  },
  "bin": {
    "igit": "./bin/index.mjs"
  },
  "dependencies": {
    "@doremijs/igit-core": "0.0.1"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
