{
  "name": "@doremijs/igit-cli",
  "version": "0.0.1",
  "description": "A CLI tool for combining git workflows with Rust bindings",
  "keywords": [
    "igit",
    "cli",
    "git",
    "hooks"
  ],
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "build": "bun build src/index.ts --outdir bin --target node --external @doremijs/igit-core"
  },
  "bin": {
    "igit": "./bin/index.js"
  },
  "dependencies": {
    "@doremijs/igit-core": "workspace:*"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
